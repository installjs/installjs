{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "declaration": true,
        "emitDeclarationOnly": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
