{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "declaration": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules/*",
        "**/node_modules/*"
    ],
    "include": [
        "src/*"
    ]
}
